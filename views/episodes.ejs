<!DOCTYPE html>
<html lang="en">

<head>
    <meta meta charset="UTF-8" name="viewport" content="width=device-width, initial-scale=1">
    <title>Character Overview</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="icon" href="/favicon.ico" type="image/x-icon">
</head>

<body class="bg-rick text-gray-900">
    <header class="mb-6">
        <!-- Main Navigation -->
        <nav class="bg-white shadow p-4 mb-6">
            <div class="max-w-7xl mx-auto">
                <div class="flex justify-between items-center">
                    <h1 class="text-xl font-bold">Rick and Morty Characters</h1>
                    <!-- Burger button always visible -->
                    <button id="burger" class="text-blue-600 text-lg font-semibold">
                        â˜° Menu
                    </button>
                </div>

                <!-- Nav Links: Hidden by default, toggled by JS -->
                <div id="nav-wrapper" class="hidden mt-4">
                    <ul class="flex flex-col gap-2 md:flex-row md:gap-4 md:items-center">
                        <li><a href="/" class="link">Home</a></li>
                        <li><a href="/characters" class="link">Characters</a></li>
                        <li><a href="/locations" class="link">Locations</a></li>
                        <li><a href="/episodes" class="link">Episodes</a></li>
                    </ul>
                </div>
            </div>
        </nav>

    </header>

    <main>
        <h1 class="text-2xl font-bold mb-4">All Episodes</h1>
        <ul id="episode-list" class="space-y-2">
            <% episodes.forEach(ep=> { %>
                <li class="border-b pb-1">
                    <a href="/episode/<%= ep.id %>" class="link">
                        <strong>
                            <%= ep.episode %>
                        </strong>: <%= ep.name %> (<%= ep.air_date %>)
                    </a>
                </li>
                <% }) %>
        </ul>

        <button id="load-more" class="mt-4 px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-600">
            Load More
        </button>
    </main>

    <script>
        let currentPage = 1;

        document.getElementById('load-more')?.addEventListener('click', async () => {
            currentPage++;
            const res = await fetch(`/episodes?page=${currentPage}`, {
                headers: {
                    'Accept': 'application/json'
                }
            });

            const data = await res.json();
            const list = document.getElementById('episode-list');

            data.episodes.forEach(ep => {
                const li = document.createElement('li');
                li.className = 'border-b pb-1';
                li.innerHTML = `
          <a href="/episode/${ep.id}" class="link">
            <strong>${ep.episode}</strong>: ${ep.name} (${ep.air_date})
          </a>
        `;
                list.appendChild(li);
            });

            if (!data.hasNextPage) {
                const btn = document.getElementById('load-more');
                btn.disabled = true;
                btn.innerText = 'No more episodes';
            }
        });

        document.addEventListener('DOMContentLoaded', () => {
            const burger = document.getElementById('burger');
            const navWrapper = document.getElementById('nav-wrapper');

            burger.addEventListener('click', () => {
                navWrapper.classList.toggle('hidden');
            });
        });
    </script>
</body>

</html>