<!DOCTYPE html>
<html lang="en">

<head>
  <meta meta charset="UTF-8" name="viewport" content="width=device-width, initial-scale=1">
  <title>Character Overview</title>
  <link rel="stylesheet" href="/css/style.css">
  <link rel="icon" href="/favicon.ico" type="image/x-icon">
</head>

<body class="bg-rick text-gray-900">
  <header class="mb-6">
    <!-- Main Navigation -->
    <nav class="bg-white shadow p-4 mb-6">
      <div class="max-w-7xl mx-auto">
        <div class="flex justify-between items-center">
          <h1 class="text-xl font-bold">Rick and Morty Characters</h1>
          <!-- Burger button always visible -->
          <button id="burger" class="text-blue-600 text-lg font-semibold">
            ☰ Menu
          </button>
        </div>

        <!-- Nav Links: Hidden by default, toggled by JS -->
        <div id="nav-wrapper" class="hidden mt-4">
          <ul class="flex flex-col gap-2 md:flex-row md:gap-4 md:items-center">
            <li><a href="/" class="link">Home</a></li>
            <li><a href="/characters" class="link">Characters</a></li>
            <li><a href="/locations" class="link">Locations</a></li>
            <li><a href="/episodes" class="link">Episodes</a></li>
          </ul>
        </div>
      </div>
    </nav>

  </header>
  <!-- Main Content -->
  <main class="max-w-6xl mx-auto px-4">

    <!-- Character Overview Aside -->
    <aside id="character-overview" class="hidden border p-4 rounded-lg shadow-lg bg-white">
      <div class="flex flex-col md:flex-row gap-4">
        <img id="overview-image" class="w-48 h-48 object-cover rounded" src="" alt="Character image" />
        <div>
          <h2 id="overview-name" class="text-2xl font-bold mb-2"></h2>
          <p id="overview-species" class="mb-1 text-gray-700"></p>
          <p id="overview-status" class="mb-1 text-gray-700"></p>
          <p id="overview-gender" class="mb-1 text-gray-700"></p>
          <p id="overview-origin" class="mb-1 text-gray-700"></p>
          <p id="overview-location" class="mb-1 text-gray-700"></p>
        </div>
      </div>
    </aside>
    <!-- Character Grid Section -->
    <section class="character-grid grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6 mb-10 px-4">
      <% characters.forEach(character=> { %>
        <article class="character-card border p-2 rounded shadow cursor-pointer hover:bg-gray-100"
          data-character='<%- JSON.stringify(character) %>'>
          <h2 class="character-name text-lg font-semibold">
            <%= character.name %>
          </h2>
          <img src="<%= character.image %>" alt="<%= character.name %>"
            class="character-image w-40 h-40 object-cover rounded mx-auto" />
          <p class="character-subtext text-sm text-gray-600">
            <%= character.species %> - <%= character.status %>
          </p>
        </article>
        <% }) %>
    </section>
  </main>

  <!-- Footer -->
  <footer class="text-center py-4 mt-10 text-sm text-black-500">
    &copy; 2025 Rick and Morty API Viewer
  </footer>

  <script>
    document.querySelectorAll('.character-card').forEach(card => {
      card.addEventListener('click', () => {
        const character = JSON.parse(card.dataset.character);

        // Populate the overview
        document.getElementById('overview-image').src = character.image;
        document.getElementById('overview-image').alt = character.name;
        document.getElementById('overview-name').textContent = character.name;
        document.getElementById('overview-species').textContent = `Species: ${character.species}`;
        document.getElementById('overview-status').textContent = `Status: ${character.status}`;
        document.getElementById('overview-gender').textContent = `Gender: ${character.gender}`;

        // ✅ Add Origin link
        const originId = character.origin?.url?.split('/').pop();
        const originName = character.origin?.name || 'Unknown';
        if (originId && !isNaN(originId)) {
          document.getElementById('overview-origin').innerHTML = `Origin: <a href="/location/${originId}" class="link">${originName}</a>`;
        } else {
          document.getElementById('overview-origin').textContent = `Origin: ${originName}`;
        }

        // ✅ Add Location link
        const locationId = character.location?.url?.split('/').pop();
        const locationName = character.location?.name || 'Unknown';
        if (locationId && !isNaN(locationId)) {
          document.getElementById('overview-location').innerHTML = `Location: <a href="/location/${locationId}" class="link">${locationName}</a>`;
        } else {
          document.getElementById('overview-location').textContent = `Location: ${locationName}`;
        }

        document.getElementById('character-overview').classList.remove('hidden');
      });
    });

    document.addEventListener('DOMContentLoaded', () => {
      const burger = document.getElementById('burger');
      const navWrapper = document.getElementById('nav-wrapper');

      burger.addEventListener('click', () => {
        navWrapper.classList.toggle('hidden');
      });
    });
  </script>
</body>

</html>